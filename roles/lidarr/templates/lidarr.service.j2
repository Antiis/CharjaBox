[Unit]
Description= Lidarr Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/lidarr/docker-compose.lidarr.yml -p "Lidarr" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/lidarr/docker-compose.lidarr.yml -p "Lidarr" stop

[Install]
WantedBy=multi-user.target
