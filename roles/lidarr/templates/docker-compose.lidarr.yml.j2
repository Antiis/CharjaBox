---
version: '3'

services:
  lidarr:
    image: linuxserver/lidarr
    container_name: Lidarr
    restart: unless-stopped
    ports:
      - {{ lidarr_port }}:8686
    volumes:
      - {{ lidarr_config_directory }}:/config
      - {{ lidarr_data_directory }}:/downloads
      - {{ charjabox_music_directory }}:/music
