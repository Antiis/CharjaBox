[Unit]
Description=Nextcloud Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/nextcloud/docker-compose.nextcloud.yml -p "Nextcloud" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/nextcloud/docker-compose.nextcloud.yml -p "Nextcloud" stop

[Install]
WantedBy=multi-user.target
