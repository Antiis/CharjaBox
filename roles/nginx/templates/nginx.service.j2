[Unit]
Description= Nginx Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/nginx/docker-compose.nginx.yml -p "Nginx" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/nginx/docker-compose.nginx.yml -p "Nginx" stop

[Install]
WantedBy=multi-user.target
