[Unit]
Description= Gitea Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/gitea/docker-compose.gitea.yml -p "Gitea" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/gitea/docker-compose.gitea.yml -p "Gitea" stop

[Install]
WantedBy=multi-user.target
