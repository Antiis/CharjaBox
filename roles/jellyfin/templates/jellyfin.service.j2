[Unit]
Description= jellyfin Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/jellyfin/docker-compose.jellyfin.yml -p "Jellyfin" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/jellyfin/docker-compose.jellyfin.yml -p "Jellyfin" stop

[Install]
WantedBy=multi-user.target
