[Unit]
Description= Miniflux Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/miniflux/docker-compose.miniflux.yml -p "Miniflux" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/miniflux/docker-compose.miniflux.yml -p "Miniflux" stop

[Install]
WantedBy=multi-user.target
