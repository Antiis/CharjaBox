[Unit]
Description= BIND Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/bind/docker-compose.bind.yml -p "BIND" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/bind/docker-compose.bind.yml -p "BIND" stop

[Install]
WantedBy=multi-user.target
