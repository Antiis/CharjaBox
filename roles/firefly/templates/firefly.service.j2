[Unit]
Description= Firefly Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/firefly/docker-compose.firefly.yml -p "Firefly" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/firefly/docker-compose.firefly.yml -p "Firefly" stop

[Install]
WantedBy=multi-user.target
