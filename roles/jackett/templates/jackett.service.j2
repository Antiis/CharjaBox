[Unit]
Description= Jackett Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/jackett/docker-compose.jackett.yml -p "Jackett" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/jackett/docker-compose.jackett.yml -p "Jackett" stop

[Install]
WantedBy=multi-user.target
