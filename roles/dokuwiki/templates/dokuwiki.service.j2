[Unit]
Description= dokuwiki Docker Service
After=docker.service
Requires=docker.service

[Service]
TimeoutSec=infinity
Restart=always
RestartSec=5

ExecStart=/usr/bin/docker-compose -f {{ docker_compose_dir }}/dokuwiki/docker-compose.dokuwiki.yml -p "Dokuwiki" up
ExecStop=/usr/bin/docker-compose -f {{ docker_compose_dir }}/dokuwiki/docker-compose.dokuwiki.yml -p "Dokuwiki" stop

[Install]
WantedBy=multi-user.target
